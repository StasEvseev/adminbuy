server {
    listen 80;
    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $host;

        proxy_redirect off;

        proxy_pass http://127.0.0.1:8000;
    }

    location /socket.io {
        proxy_pass http://127.0.0.1:8100/socket.io;
        proxy_redirect off;
        proxy_buffering off;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
    }


    location /wiki/static/ {
        alias /usr/local/lib/python2.7/dist-packages/stasflikiss/static/;
    }
    location /wiki/ {
        proxy_pass http://127.0.0.1:8001;
        proxy_set_header Host $http_host;
    }
    location /static {
        alias /home/user/www/buyapi/static/;
        access_log off; # не пишем логи
        expires 3d; # кешируем у клиента на 3 дня
    }
    location /media {
        alias /home/user/www/buyapi/wiki/media;
    }

    location /render {
        proxy_pass http://127.0.0.1:8001/render;
    }

    location /upload {
        proxy_pass http://127.0.0.1:8001/upload;
    }

}